<%- include("header") -%>

<h1>Register to Tweaker</h1>

<div class="register_box">
    <form id="reg_form" action="/register" method="POST">
        <label>User handle: </label>
        <input type="text" name="user_handle"> <br> <br>

        <label>Password: </label>
        <input type="password" name="password"> <br> <br>
        
        <label>Name: </label>
        <input type="text" name="name"> <br> <br>
        
        <label>Place: </label>
        <input type="text" name="place"> <br> <br>
        
        <label>Mobile Number: </label>
        <input type="text" name="mobile_number"> <br> <br>

        <input type="submit" class="reg_submit">
    </form>
</div>        

<%- include("footer") -%>